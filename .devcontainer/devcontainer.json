// For format details, see https://aka.ms/devcontainer.json.
{
  "name": "Flutter SSH",
  "image": "ghcr.io/techiro/devcontainer-template/flutter:latest",  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "vscjava.vscode-gradle",
        "redhat.vscode-yaml"
      ]
    }
  },
  "features":{
    "ghcr.io/devcontainers/features/docker-from-docker:1": {}
  },
	"mounts": [
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],  
  "workspaceFolder": "/workspaces/easy-ssh-mob",
  "postCreateCommand": "cd src;flutter pub get",
  "remoteUser": "root",
  "workspaceMount": "source=/home/dipi/repos/easy-ssh-mob,target=/workspaces/easy-ssh-mob,type=bind"
}