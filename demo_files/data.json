{
  "aplicacao": "Easy SSH Mob",
  "versao": "1.0.0",
  "descricao": "Gerenciador de arquivos SSH multiplataforma",
  "funcionalidades": [
    "Navegação de diretórios",
    "Execução de scripts",
    "Visualização de arquivos de texto",
    "Terminal integrado"
  ],
  "suporte_arquivos": {
    "texto": [
      ".txt", ".log", ".conf", ".json", ".xml", 
      ".yml", ".yaml", ".md", ".sh", ".py"
    ],
    "executaveis": [
      ".sh", ".py", ".pl", ".rb", ".js"
    ]
  },
  "configuracao": {
    "limite_tamanho": "1MB",
    "linhas_preview": 100,
    "encoding": "UTF-8"
  }
}
